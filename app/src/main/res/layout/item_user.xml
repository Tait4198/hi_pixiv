<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="username"
            type="java.lang.String"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:id="@+id/root_view"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="4dp">
                <FrameLayout
                    android:id="@+id/preview_root_1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:foreground="@drawable/dark_foreground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="invisible">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/preview_1"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/colorImageBg" />
                    <com.mikepenz.iconics.view.IconicsTextView
                        android:id="@+id/page_count_1"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPageCountBg"
                        android:layout_gravity="end|top"
                        android:visibility="gone"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/preview_root_2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:foreground="@drawable/dark_foreground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="invisible">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/preview_2"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/colorImageBg" />
                    <com.mikepenz.iconics.view.IconicsTextView
                        android:id="@+id/page_count_2"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPageCountBg"
                        android:layout_gravity="end|top"
                        android:visibility="gone"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/preview_root_3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:foreground="@drawable/dark_foreground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="invisible">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/preview_3"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/colorImageBg" />
                    <com.mikepenz.iconics.view.IconicsTextView
                        android:id="@+id/page_count_3"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPageCountBg"
                        android:layout_gravity="end|top"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="14dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:text="@{username}"
                    android:textColor="@color/colorTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <com.like.LikeButton
                app:icon_size="22dp"
                app:dots_primary_color="@color/md_blue_500"
                app:dots_secondary_color="@color/md_green_500"
                app:circle_start_color="@color/md_green_500"
                app:circle_end_color="@color/md_blue_500"
                app:like_drawable="@drawable/person_on"
                app:unlike_drawable="@drawable/person_off"
                android:id="@+id/like_button"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="6dp"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>